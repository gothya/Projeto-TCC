rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      // 1. Participant Access: Can read/write ONLY their own document
      allow create, update, delete: if request.auth != null && request.auth.uid == userId;

      // 2. Read Access: Participants can read their own data; Admin can read all data.
      // This locks down database reading to the sole researcher.
      allow read: if request.auth != null && (request.auth.uid == userId || request.auth.token.email == 'gothya@gmail.com');
    }
  }
}
