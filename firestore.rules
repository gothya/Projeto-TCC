rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Admin Access: Complete access to everything
    match /{document=**} {
      allow read, write: if request.auth != null && request.auth.token.email == 'gothya@gmail.com';
    }

    // Participant Access: Can read/write ONLY their own document
    match /users/{userId} {
      allow read, create, update, delete: if request.auth != null && request.auth.uid == userId;
    }
  }
}