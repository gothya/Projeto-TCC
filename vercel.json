{
    "framework": "vite",
    "buildCommand": "npm run build",
    "rewrites": [
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ],
    "crons": [
        {
            "path": "/api/send-broadcast?isCron=true",
            "schedule": "0 12 * * *"
        },
        {
            "path": "/api/send-broadcast?isCron=true",
            "schedule": "0 14 * * *"
        },
        {
            "path": "/api/send-broadcast?isCron=true",
            "schedule": "0 16 * * *"
        },
        {
            "path": "/api/send-broadcast?isCron=true",
            "schedule": "0 18 * * *"
        },
        {
            "path": "/api/send-broadcast?isCron=true",
            "schedule": "0 20 * * *"
        },
        {
            "path": "/api/send-broadcast?isCron=true",
            "schedule": "0 22 * * *"
        },
        {
            "path": "/api/send-broadcast?isCron=true",
            "schedule": "0 0 * * *"
        }
    ]
}